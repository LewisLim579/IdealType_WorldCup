<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    android:orientation="vertical"
    tools:context="com.appnight.ewhaworldcup.GenderSelectActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ImageButton_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/btn_male" />

            <ImageButton
                android:id="@+id/imageButton_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:background="@null"
                android:src="@drawable/btn_female" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton_aboutus"
            android:layout_width="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/aboutus" />

    </FrameLayout>

</LinearLayout>